#!/bin/bash

# Pre-push hook for OSM-Notes-Ingestion
# Unified Git hook for Bash/SQL projects (LIGHT VERSION)
# Author: Andres Gomez (AngocA)
# Version: 2026-01-27
# Runs fast quality checks before allowing push
#
# To install: ln -sf ../../.git-hooks/pre-push .git/hooks/pre-push

set -e

echo "üöÄ Running pre-push validation (light mode)..."
echo ""

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if we're in the right directory
if [ ! -d "tests" ]; then
    echo -e "${RED}‚ùå Not in project root directory${NC}"
    exit 1
fi

# Run fast formatting checks only (no full test suite)
echo -e "${BLUE}üîç Running fast quality checks...${NC}"
echo -e "${YELLOW}‚ÑπÔ∏è  Light mode: Only formatting checks (fast)${NC}"
echo ""

# Check bash formatting (fast)
if command -v shfmt &> /dev/null; then
    echo "Checking bash formatting..."
    if find bin scripts tests -name "*.sh" -type f 2>/dev/null | head -20 | xargs shfmt -d 2>&1 | grep -q "."; then
        echo -e "${RED}‚ùå Code formatting issues found${NC}"
        find bin scripts tests -name "*.sh" -type f 2>/dev/null | head -5 | xargs shfmt -d 2>&1 | head -20
        exit 1
    fi
    echo -e "${GREEN}‚úÖ Formatting check passed${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  shfmt not installed, skipping format check...${NC}"
fi
echo ""

echo -e "${YELLOW}‚ÑπÔ∏è  Light mode: Full tests skipped${NC}"
echo -e "${YELLOW}   Run manually: ./tests/run_all_tests.sh${NC}"
echo ""
echo -e "${GREEN}‚úÖ Pre-push validation complete!${NC}"
echo ""

exit 0
